<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="30dp"
    android:paddingTop="30dp">

<com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_starbucks_order_img"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.LargeComponent"
        tools:src="@drawable/img_cake" />

    <TextView
        android:id="@+id/tv_starbucks_order_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.Starbucks.Subhead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_starbucks_order_img"
        app:layout_constraintTop_toTopOf="@id/iv_starbucks_order_img"
        tools:text="@string/tv_dummy_data" />

    <TextView
        android:id="@+id/tv_starbucks_order_eng_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/TextAppearance.Starbucks.Body1_M"
        android:textColor="@color/gray400"
        app:layout_constraintEnd_toEndOf="@id/tv_starbucks_order_title"
        app:layout_constraintStart_toStartOf="@id/tv_starbucks_order_title"
        app:layout_constraintTop_toBottomOf="@id/tv_starbucks_order_title"
        tools:text="@string/tv_dummy_data" />

</androidx.constraintlayout.widget.ConstraintLayout>